int main() {
    
  char input;
                // I delcared int misses = 0 AGAIN, once global and one more here in main, and the main variable as a reference, not the global, even when global was changing.  
  
  
  

  
  
  greet();
  
    while(misses < 7){
        
  std::cout << "Guess a letter" << "\n";
  std::cin >> input; 
  
  
  display_misses(misses);
  std::cout << guess(input) << misses << "\n";
 
  
  if(answer == codeword){
      std::cout << "Congradulations, you WIN!!!!" << "\n";
      break; 
  }
    }
    if (misses > 6){
        std::cout << "Game over, you lose!" << "\n";
    }
}
