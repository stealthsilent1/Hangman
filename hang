#include <vector>
#include <iostream>
#include <string>



  std::string codeword = "codeacademy";
  std::string answer = "___________";
  int misses = 0;
  
// Declare functions

void display_misses(int misses);
void greet();



// Define functions

void greet(){
  std::cout << "=============" << "\n";
  std::cout << "UFO: The Game" << "\n";
  std::cout << "=============" << "\n";
  std::cout << "Instructions: save your friend" << "\n";
  std::cout << "from alien abduction by guessing" << "\n";
  std::cout << "the letters in the codeword" << "\n";
};

std::string guess(char input){ // takes a letter as an input, outputs hangman style correct letters shown. 
    bool found_letter = 0;
    
    for(int x = 0;x < codeword.size();x++){
        if (codeword[x] == input){
            answer[x] = input; // easiest way of changing a character
            found_letter = 1;
        }
        
        }
        if (found_letter == 0){
            misses++;
        }
        return answer;
    }; 
    



void display_misses(int misses) {

  if (misses == 0 || misses == 1) {

    std::cout << "                 .                            \n";
